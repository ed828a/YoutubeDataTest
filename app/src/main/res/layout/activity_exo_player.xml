<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.ExoPlayerActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/exoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:useDefaultControls="true" />

    </FrameLayout>
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <TextView
        android:id="@+id/textExoPlayerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/buttonExoPlayerSearch"
        app:layout_constraintEnd_toStartOf="@id/buttonExoPlayerDownload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/buttonExoPlayerSearch"
        tools:text="NEW MOVIE TRAILERS 2018 | Weekly #22" />

    <ImageButton
        android:id="@+id/buttonExoPlayerDownload"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/download"
        app:layout_constraintBottom_toBottomOf="@id/buttonExoPlayerSearch"
        app:layout_constraintEnd_toStartOf="@id/buttonExoPlayerSearch"
        app:layout_constraintTop_toTopOf="@id/buttonExoPlayerSearch" />

    <android.support.v7.widget.SearchView
        android:id="@+id/buttonExoPlayerSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryText"
        app:closeIcon="@drawable/ic_close"
        app:iconifiedByDefault="true"
        app:layout_constraintBottom_toTopOf="@id/recyclerExoPlayerRelatedListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintVertical_bias="0.421"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:queryHint="Search movies" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerExoPlayerRelatedListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonExoPlayerSearch" />
</android.support.constraint.ConstraintLayout>